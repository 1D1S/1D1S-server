extend type Query {
    allDiaries: [Diary!]!
    myDiaries: [Diary]

    randomDiaries(first: Int = 10): [Diary]
    diariesList(
        filter: DiaryFilterInput,
        first: Int = 10,
        after: String
    ): DiaryConnection

    diaryById(id: ID!): Diary!
}

input DiaryFilterInput{
    job: JobType
    ageGroup: AgeGroup
}

type DiaryConnection {
    edges: [DiaryEdge]
    pageInfo: PageInfo!
}

type DiaryEdge {
    node: Diary
    cursor: String!
}

